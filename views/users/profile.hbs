{{#if user}}
<h2 class="mt-3">Update User</h2>
<form id="updateUserForm" class="row g-3 mt-3">
  <div class="col-7">
    <label for="inputUpdateUserNickname">Nickname</label>
    <input type="text" name="nickname" value="{{user.nickname}}" class="form-control" id="inputUpdateUserNickname" placeholder="Nickname">
  </div>
  <div class="col-7">
    <label for="inputUpdateUserEmail">Email</label>
    <input type="text" name="email" value="{{user.email}}" class="form-control" id="inputUpdateUserEmail" placeholder="Email">
  </div>
  <div class="col-7">
    <label for="inputUpdateUserPassword">Password</label>
    <input type="password" name="password" class="form-control" id="inputUpdateUserPassword" placeholder="Password">
  </div>

  <div class="col-7">
    <button type="button" class="btn btn-primary mb-3" onclick="handleUpdateUser()">Обновить данные</button>
  </div>
</form>
{{/if}}