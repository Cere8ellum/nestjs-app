{{#if news}}
<div class="row mt-4">
  {{#each news}}
  <div class="col-3">
    <div class="card">
      <div class="card-header">{{this.title}}</div>
      {{#if this.cover}}<img src="{{this.cover}}" class="card-img-top" alt="{{this.title}}">
      <div class="card-body">
        <h5 class="card-title">{{this.createdAt}}</h5>
        <p class="card-text">{{this.description}}</p>
        <a href="/news/details/{{this.id}}" class="btn btn-primary">Читать</a>
        {{#ifSignedIn}}<a href="/news/update/{{this.id}}" class="btn btn-secondary">Изменить</a>{{/ifSignedIn}}
      </div>
      {{/if}}
    </div>
  </div>
  {{/each}}
</div>
{{else}}
Список новостей пуст!
{{/if}}

{{#ifSignedIn}}
<form id="createNewsForm" class="row g-3 mt-3" enctype="multipart/form-data">
  <div class="col-7">
    <label for="inputTitle">Заголовок</label>
    <input type="text" name="title" class="form-control" id="inputTitle" placeholder="Заголовок">
  </div>
  <div class="col-7">
    <label for="inputDescription">Описание</label>
    <input type="text" name="description" class="form-control" id="inputDescription" placeholder="Описание">
  </div>
  <div class="col-7">
    <label for="inputAuthor">Автор</label>
    <input type="text" name="author" value="{{this.nickname}}" readonly class="form-control" id="inputAuthor" placeholder="Автор">
  </div>
  <div class="col-7">
    <label for="inputCreatedAt">Дата новости</label>
    <input type="date" name="createdAt" class="form-control" id="inputCreatedAt">
  </div>
  <div class="col-7">
    <label for="inputImage" class="form-label">Добавьте фото</label>
    <input class="form-control" name="cover" type="file" id="inputImage">
  </div>

  <div class="col-7">
    <button type="button" class="btn btn-primary mb-3" onclick="handleSubmitNews()">Создать новость</button>
  </div>
</form>
{{/ifSignedIn}}