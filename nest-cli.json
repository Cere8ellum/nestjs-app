{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      "modules/mail/templates/**/*",
      {
        "include": "assets/**/*",
        "outDir": "/public",
        "watchAssets": true
      }
    ],
    "watchAssets": true
  }
}
